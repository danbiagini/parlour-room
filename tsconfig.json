{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "allowJs": true,
        "jsx": "react",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "declaration.d.ts",
        "src/**/*", "test"
    ],
    "exclude": [
        "test/"
    ]
}